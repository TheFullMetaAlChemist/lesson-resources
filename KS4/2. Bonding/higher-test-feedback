    function renderQuestions() {
        const container = document.getElementById('quiz-container');
        questionData.forEach(q => {
            const card = document.createElement('div');
            card.className = 'question-card';
            card.id = `card-${q.id}`;
            card.innerHTML = `
                <div class="q-header">
                    <div style="flex-grow:1">
                        <span class="q-topic">${q.topic}</span>
                        <div class="q-title">Q${q.id}: ${q.q}</div>
                    </div>
                    <div class="status-toggle">
                        <label><input type="radio" name="s-${q.id}" value="correct" onchange="updateStyle('${q.id}', 'correct')"><span class="status-btn">‚úÖ Correct</span></label>
                        <label><input type="radio" name="s-${q.id}" value="incorrect" onchange="updateStyle('${q.id}', 'incorrect')"><span class="status-btn">‚ùå Correction Required</span></label>
                    </div>
                </div>
                <div class="box model-ans"><span class="label">‚úÖ Model Answer</span>${q.ans}</div>
                <div class="box explanation"><span class="label">üß† Detailed Explanation</span>${q.exp}</div>
                <div class="box misconception"><span class="label">‚ö†Ô∏è Common Misconceptions</span>${q.mis}</div>
            `;
            container.appendChild(card);
        });
    }

    function updateStyle(id, s) {
        const el = document.getElementById(`card-${id}`);
        el.className = 'question-card ' + (s === 'correct' ? 'answered-right' : 'answered-wrong');
    }

    function toggle(id) {
        const d = document.getElementById('ans-'+id);
        d.style.display = d.style.display === 'block' ? 'none' : 'block';
    }

    function generateAnalysis() {
        const list = document.getElementById('follow-up-list');
        const summaryCont = document.getElementById('summary-container');
        list.innerHTML = '';
        summaryCont.innerHTML = '<h3>Performance by Sub-Topic:</h3>';

        const wrongs = Array.from(document.querySelectorAll('input[value="incorrect"]:checked')).map(i => i.name.split('-')[1]);
        const topics = {};

        questionData.forEach(q => {
            if (!topics[q.topic]) topics[q.topic] = { total: 0, wrong: 0 };
            topics[q.topic].total++;
        });

        wrongs.forEach(id => {
            const q = questionData.find(item => item.id === id);
            if (q) topics[q.topic].wrong++;
        });

        Object.keys(topics).forEach(t => {
            const stat = topics[t];
            const div = document.createElement('div');
            div.className = 'summary-item';
            const color = stat.wrong === 0 ? '#4ade80' : (stat.wrong === stat.total ? '#f87171' : '#fbbf24');
            div.innerHTML = `<span>${t}</span><span style="color:${color}; font-weight:bold">${stat.total - stat.wrong}/${stat.total} Correct</span>`;
            summaryCont.appendChild(div);
        });
        
        if (wrongs.length === 0) {
            list.innerHTML = '<p>Excellent work. You have mastered these Higher Tier concepts. No further tasks required.</p>';
        } else {
            wrongs.forEach(id => {
                const f = followUpData[id];
                if (f) {
                    const div = document.createElement('div');
                    div.className = 'follow-up-task';
                    div.innerHTML = `
                        <span style="font-weight:bold; color:var(--danger)">TARGETED FOLLOW-UP FOR Q${id}:</span>
                        <div style="margin-top:10px; border-top:1px solid #e2e8f0; padding-top:10px;">${f.q}</div>
                        <button class="reveal-btn" onclick="toggle('${id}')">üëÅÔ∏è Reveal Follow-up Answers</button>
                        <div class="follow-up-ans" id="ans-${id}">
                            <span class="label">Expert Check</span>
                            ${f.a}
                        </div>
                    `;
                    list.appendChild(div);
                }
            });
        }
        document.getElementById('results-section').style.display = 'block';
        window.scrollTo({ top: document.getElementById('results-section').offsetTop - 20, behavior: 'smooth' });
    }

    window.onload = renderQuestions;
</script>

</body>
</html>
